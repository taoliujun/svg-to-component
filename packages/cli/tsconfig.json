{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "outDir": "./lib",
        "declaration": true,
        "resolveJsonModule": true,
        // some lints
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}