{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "lib": [
            "es2023",
            "DOM",
        ],
        "outDir": "./lib",
        "declaration": true,
        // some lints
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "./src/template"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}